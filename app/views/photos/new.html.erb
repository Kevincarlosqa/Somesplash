<h1>New Photo</h1>

<%= form_with model: @photo do |form| %>
<div>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <% @photo.errors.full_messages_for(:name).each do |message|%>
  <span>
  <%= message%>
  </span>
  <%end%>
</div>

<div>
  <%= form.label :description %>
  <%= form.text_area :description %>
  <% @photo.errors.full_messages_for(:description).each do |message|%>
  <span>
  <%= message%>
  </span>
  <%end%>
</div>

<div>
  <%= form.label :category_id %>
  <%= form.collection_select :category_id, Category.order(:name), :id, :name, {selected: @category.id} %>
  <% @photo.errors.full_messages_for(:description).each do |message|%>
  <span>
  <%= message%>
  </span>
  <%end%>
</div>
  
  <div>
  <%= form.submit %>
  </div>
<% end %>
