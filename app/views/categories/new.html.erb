<h1>Categories</h1>
<p>Find me in app/views/categories/new.html.erb</p>
<%= form_with model: @categories do |form| %>
<div>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <% @categories.errors.full_messages_for(:name).each do |message|%>
  <span>
  <%= message%>
  </span>
  <%end%>
</div>

<div>
  <%= form.label :description %>
  <%= form.text_area :description %>
  <% @categories.errors.full_messages_for(:description).each do |message|%>
  <span>
  <%= message%>
  </span>
  <%end%>
</div>
  
  <div>
  <%= form.submit %>
  </div>
<% end %>
